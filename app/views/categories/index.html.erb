
<div class="d-flex justify-content-between">
<div >
  <h1>Categorias</h1>
</div>
<div >
<%= link_to new_category_path, class: 'btn btn-danger btn-sm' do %>
  <span class="glyphicon glyphicon-plus"></span>
  Nova Categoria
<% end %>
</div>
</div>

<div class="card shadow mb-4">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Visível</th>
      <th><center>Ações</center></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= image_tag(category.image_url(:thumb).to_s) %></td>
        <td><%= category.name %></td>
        <td><%= category.visible? ? "Sim" : "Não" %></td>
        <td><center>
            <%= link_to category, class: 'btn btn-secondary btn-sm' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Mostrar
            <% end %>          
            <%= link_to edit_category_path(category), class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Editar
            <% end %>
            <%= link_to category, method: :delete, class: 'btn btn-danger btn-sm' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Excluir
            <% end %>
            </center>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<div class="d-flex justify-content-end ">
<%= paginate @categories %>
</div>
