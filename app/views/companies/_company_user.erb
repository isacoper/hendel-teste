<div class="d-flex justify-content-between">
  <div>
    <h1>Usuários</h1>
  </div>
  <div>
    <%= link_to new_company_company_user_path(@company), class: 'btn btn-danger btn-sm' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Usuário
    <% end %>
  </div>
</div>

      <div class="card shadow mb-4">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th><center>Ações</center></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @company_users.each do |company_user| %>
              <tr>
                <td><%= company_user.name %></td>
                <td><%= company_user.email %></td>
                <td><center>
                <%= link_to company_company_user_path(company_user.company, company_user), class: 'btn btn-secondary btn-sm' do %>
                  Mostrar
                <% end %>          
                <%= link_to edit_company_company_user_path(company_user.company, company_user), class: 'btn btn-primary btn-sm' do %>
                  Editar
                <% end %>
                <%= link_to company_user, class: 'btn btn-danger btn-sm' do %>
                  Excluir
                <% end %>
                <center>
                </td>
                
              </tr>
            <% end %>
            </tbody>
          </table>
      </div>



