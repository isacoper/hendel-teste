<div class="col-md-12">
  <div class="row">
    <div class="panel panel-primary">
      <div class= "panel-heading">
        <h3 class ="panel-title">
          <strong> Usuários </strong>
          <%= link_to new_company_company_user_path(@company), class: 'btn btn-primary btn-xs pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span> Adicionar Usuário
          <% end %> &nbsp;&nbsp;
        </h3>
      </div>

      </br>

      <div class="card shadow mb-4">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>

        <tbody>
          <% @company_users.each do |company_user| %>
            <tr>
              <td><%= company_user.name %></td>
              <td><%= company_user.email %></td>
              <td><%= link_to 'Show', company_company_user_path(company_user.company, company_user) %></td>
              <td><%= link_to 'Edit', edit_company_company_user_path(company_user.company, company_user) %></td>
        
              
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


