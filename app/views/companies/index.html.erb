

<div class="container-fluid">
  <div class="input-group ">
  <%= form_tag(companies_path, method: "get") do %>
    <%= label_tag(:query, "Search for:") %>
    <%= text_field_tag(:query) %>
    <%= submit_tag("Search")  %>
  <% end %>
</div>
</br>

<div class="d-flex justify-content-between">
  <div >
    <h1>Empresas</h1>
  </div>
  <div >
  <%= link_to new_company_path, class: 'btn btn-danger btn-sm' do %>
    Nova Empresa
  <% end %>
  </div>
</div>

<div class="card shadow mb-4">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Razão Social</th>
        <th>Nome Fantasia</th>
        <th>Email</th>
        <th>Status</th>
        <th>Categoria</th>
        <th><center>Ações</center></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= image_tag(company.image_url(:thumb).to_s) %></td>
          <td><%= company.company_name %></td>
          <td><%= company.fantasy_name %></td>
          <td><%= company.email %></td>
          <td><%= company.status %></td>
          <td><%= company.status %></td>
          <td><center>
            <%= link_to company, class: 'btn btn-secondary btn-sm' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Mostrar
            <% end %>          
            <%= link_to edit_company_path(company), class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Editar
            <% end %>
            <%= link_to company, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Tem certeza que deseja remover?' } do %>
              <span class="glyphicon glyphicon-plus"></span>
              Excluir
            <% end %>
            <center>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

  <div class="d-flex justify-content-end">
    <%= paginate @companies %>
  </div>




